{
  "_comment": "=== CONFIGURACIÓN v3.0 - WORLD COMPETITION READY ===",
  "_version": "3.0 - Hypervolume Fixed, Metrics Normalized [0,1]",
  "_changes_v3": [
    "1. ClimateMetrics retorna [0,1] donde 0=óptimo",
    "2. Hypervolume reference point = 1.1 (nadir)",
    "3. Stuck detection menos agresiva",
    "4. Más generaciones para convergencia"
  ],
  
  "experiment": {
    "name": "MOEAD_Climate_5Obj_v3_WorldReady",
    "description": "Optimización multiobjetivo clima-industria con MOEA/D v3.0 - Corregido para competencia mundial",
    "scenario": "climate_5_obj",
    "random_seed": 42,
    "output_root": "results"
  },
  
  "dataset": {
    "name": "climate_energy",
    "processed_path": "data/processed/climate_dataset/climate_dataset_processed.csv",
    "raw_path": "data/raw/climate_dataset/global_climate_energy_2020_2024.csv",
    "supports_path": "data/processed/climate_dataset/supports.json",
    "metadata_path": "data/processed/climate_dataset/metadata.json"
  },
  
  "use_sampling": false,
  
  "algorithm": {
    "_comment_generations": "300 generaciones para convergencia completa",
    "generations": 300,
    
    "_comment_pop_size": "Das-Dennis H=5 → 126 direcciones para 5 objetivos",
    "population_size": 126,
    
    "logging_interval": 10,
    
    "termination": {
      "enabled": true,
      "_comment": "ftol más relajado para permitir exploración",
      "ftol": 1e-06,
      "period": 60
    },
    
    "initialization": {
      "use_pregenerated": false,
      "max_attempts": 20000
    },
    
    "decomposition": {
      "_comment": "PBI con theta=5 para 5 objetivos",
      "method": "pbi",
      "params": { 
        "theta": 5.0
      }
    },
    
    "neighborhood": {
      "_comment": "Vecindario grande para diversidad en muchos objetivos",
      "size": 25,
      "replacement_size": 3,
      "selection_probability": 0.9
    },
    
    "operators": {
      "crossover": {
        "probability": {
          "initial": 0.9,
          "min": 0.6,
          "max": 1.0
        }
      },
      "mutation": {
        "_comment": "conservative para balance calidad/velocidad",
        "method": "conservative",
        "active_ops": ["extension", "contraction", "replacement"],
        "probability": {
          "initial": 0.3,
          "min": 0.05,
          "max": 0.7
        },
        "repair_attempts": 20,
        "duplicate_attempts": 20,
        "reproducible_mode": true,
        "max_operations": 3000,
        "timeout": 10.0,
        "timeout_per_attempt": 25.0
      }
    },
    
    "stuck_detection": {
      "enabled": true,
      "_comment_v3": "MENOS AGRESIVO - permitir más exploración",
      "window": 50,
      "min_new": 1,
      "hv_window": 50,
      "hv_tol": 1e-8
    }
  },
  
  "objectives": {
    "_comment": "5 objetivos en [0,1] donde 0=óptimo para todos (MOEA/D minimiza)",
    "selected": [
      "co2_emission",
      "energy_consumption",
      "renewable_share",
      "industrial_activity_index",
      "energy_price"
    ],
    "directions": {
      "_comment": "Estas direcciones son para INTERPRETACIÓN, no para MOEA/D",
      "co2_emission": "minimize",
      "energy_consumption": "minimize",
      "renewable_share": "maximize",
      "industrial_activity_index": "maximize",
      "energy_price": "minimize"
    }
  },
  
  "constraints": {
    "rule_validity": {
      "_comment": "Reglas pequeñas = más interpretables",
      "min_antecedent_items": 1,
      "min_consequent_items": 1,
      "max_antecedent_items": 3,
      "max_consequent_items": 2
    },
    "metric_thresholds": {
      "_comment": "Sin umbrales - dejar que MOEA/D explore todo"
    },
    "exclusions": {
      "fixed_antecedents": [],
      "fixed_consequents": [],
      "forbidden_pairs": [
        ["co2_emission", "energy_consumption"],
        ["renewable_share", "energy_price"]
      ]
    }
  },
  
  "hypervolume": {
    "_comment_v3": "NUEVO - Configuración explícita del hypervolume",
    "reference_point": "nadir",
    "nadir_value": 1.1,
    "filter_invalid": true,
    "invalid_threshold": 1.5
  },
  
  "visualization": {
    "enabled": true,
    "parallel_coordinates": true,
    "pareto_3d_subset": ["co2_emission", "renewable_share", "industrial_activity_index"],
    "evolution_plots": true
  }
}