{
  "_comment": "=== CONFIGURACIÓN ÓPTIMA PARA 5 OBJETIVOS ===",
  "_version": "2.0 - World Competition Ready",
  
  "experiment": {
    "name": "MOEAD_Climate_5Obj_Optimized",
    "description": "Optimización multiobjetivo clima-industria con MOEA/D - 5 objetivos, configuración optimizada para competencia mundial",
    "scenario": "climate_5_obj",
    "random_seed": 42,
    "output_root": "results"
  },
  
  "dataset": {
    "name": "climate_energy",
    "processed_path": "data/processed/climate_dataset/climate_dataset_processed.csv",
    "raw_path": "data/raw/climate_dataset/global_climate_energy_2020_2024.csv",
    "supports_path": "data/processed/climate_dataset/supports.json",
    "metadata_path": "data/processed/climate_dataset/metadata.json"
  },
  
  "use_sampling": false,
  
  "algorithm": {
    "_comment_generations": "200-300 es óptimo para 5 objetivos, más puede causar sobreajuste",
    "generations": 250,
    
    "_comment_pop_size": "Para 5 objetivos, Das-Dennis con H=5 da 126 direcciones. H=6 da 252",
    "population_size": 126,
    
    "logging_interval": 10,
    
    "termination": {
      "enabled": true,
      "_comment": "ftol más estricto para 5 objetivos",
      "ftol": 0.00001,
      "period": 50
    },
    
    "initialization": {
      "use_pregenerated": false,
      "_comment": "Más intentos para 5 objetivos debido a mayor espacio de búsqueda",
      "max_attempts": 15000
    },
    
    "decomposition": {
      "_comment": "PBI funciona mejor para muchos objetivos (>3)",
      "method": "pbi",
      "params": { 
        "theta": 5.0
      }
    },
    
    "neighborhood": {
      "_comment": "Vecindario más grande para 5 objetivos mejora diversidad",
      "size": 25,
      "replacement_size": 3,
      "selection_probability": 0.9
    },
    
    "operators": {
      "crossover": {
        "probability": {
          "initial": 0.85,
          "min": 0.5,
          "max": 1.0
        }
      },
      "mutation": {
        "_comment": "conservative es el mejor balance calidad/velocidad",
        "method": "conservative",
        "active_ops": ["extension", "contraction", "replacement"],
        "probability": {
          "initial": 0.25,
          "min": 0.05,
          "max": 0.6
        },
        "repair_attempts": 15,
        "duplicate_attempts": 15,
        "reproducible_mode": true,
        "max_operations": 2000,
        "timeout": 8.0,
        "timeout_per_attempt": 20.0
      }
    },
    
    "stuck_detection": {
      "enabled": true,
      "_comment": "Configuración sensible para detectar estancamiento real",
      "window": 20,
      "min_new": 2,
      "hv_window": 30,
      "hv_tol": 1e-6
    }
  },
  
  "objectives": {
    "_comment": "5 objetivos: 3 minimizar, 2 maximizar",
    "selected": [
      "co2_emission",
      "energy_consumption",
      "renewable_share",
      "industrial_activity_index",
      "energy_price"
    ],
    "directions": {
      "co2_emission": "minimize",
      "energy_consumption": "minimize",
      "renewable_share": "maximize",
      "industrial_activity_index": "maximize",
      "energy_price": "minimize"
    }
  },
  
  "constraints": {
    "rule_validity": {
      "_comment": "Reglas pequeñas son más interpretables",
      "min_antecedent_items": 1,
      "min_consequent_items": 1,
      "max_antecedent_items": 3,
      "max_consequent_items": 3
    },
    "metric_thresholds": {
      "_comment": "Sin umbrales - dejar que MOEA/D explore todo el espacio"
    },
    "exclusions": {
      "_comment": "Configurar según dominio - estas son restricciones de ejemplo",
      "fixed_antecedents": [],
      "fixed_consequents": [],
      "forbidden_pairs": [
        ["co2_emission", "energy_consumption"],
        ["renewable_share", "energy_price"]
      ]
    }
  },
  
  "visualization": {
    "enabled": true,
    "parallel_coordinates": true,
    "pareto_3d_subset": ["co2_emission", "renewable_share", "industrial_activity_index"],
    "evolution_plots": true
  }
}
